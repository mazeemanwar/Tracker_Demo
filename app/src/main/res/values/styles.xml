<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Main Style which includes the action bar. This is used by default on all activities unless specified otherwise in the manifest -->

    <style name="DCThemes" parent="DCTheme.Base"/>
    <style name="DCTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/main_interface</item>
        <item name="colorControlHighlight">@color/main_interface</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>


    </style>

    <!-- Style with no action bar if you plan on using your own. Specify this on each activity in the manifest to override the default one -->


    <style name="DCTheme_NoActionBar" parent="DCTheme_NoActionBar.Base"/>
    <style name="DCTheme_NoActionBar.Base" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/main_interface</item>
        <item name="colorControlHighlight">@color/main_interface</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>


    </style>


    <style name="DCThemess" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="main_background">#FFFFFF</item>
        <item name="main_interface">#72B1DB</item>
        <item name="secondary_background">#E0E0E0</item>
        <item name="bar_background">#72B1DB</item>
        <item name="tab_bar_background">#FFFFFF</item>
        <item name="list_heading">#007aff</item>
        <item name="actionbar_subtitle">#FAFAFA</item>
        <item name="tutorial_font_color">#000000</item>
        <item name="login_screen_background">#72B1DB</item>
        <item name="behaviour_score_font_color">#FFFFFF</item>
    </style>
    <style name="CustomActionBarTheme" parent="DCThemess">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>
    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">?attr/bar_background</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/arrow_back_white</item>
        <item name="android:subtitleTextStyle">@style/SubtitleTextStyle</item>
    </style>
    <style name="DCTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/main_interface</item>
        <item name="main_background">#FFFFFF</item>
        <item name="main_interface">#72B1DB</item>
        <item name="secondary_background">#E0E0E0</item>
        <item name="bar_background">#72B1DB</item>
        <item name="tab_bar_background">#FFFFFF</item>
        <item name="list_heading">#007aff</item>
        <item name="actionbar_subtitle">#FAFAFA</item>
        <item name="tutorial_font_color">#000000</item>
        <item name="login_screen_background">#72B1DB</item>
        <item name="behaviour_score_font_color">#FFFFFF</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- This theme is applied to the application -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">

    </style>
</resources>