<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default theme but with the nice transitions enabled -->

    <style name="DCTheme" parent="DCTheme.Base">

        <item name="selectableItemBackgroundBorderless">
            ?android:attr/selectableItemBackgroundBorderless
        </item>

        <item name="main_background">@color/main_interface</item>
        <item name="main_interface">@color/main_interface</item>
        <item name="secondary_background">#E0E0E0</item>
        <item name="bar_background">@color/bar_background</item>

        <item name="tab_bar_background">#FFFFFF</item>
        <item name="list_heading">#007aff</item>
        <item name="actionbar_subtitle">#FAFAFA</item>
        <item name="tutorial_font_color">#000000</item>
        <item name="login_screen_background">@color/main_interface</item>
        <item name="behaviour_score_font_color">#FFFFFF</item>

        <item name="android:colorPrimary">@color/primary</item>
        <!-- <item name="android:colorPrimaryDark">#cb1200</item> -->
        <item name="android:colorAccent">@color/accent</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- enable overlap of transitions -->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>


    </style>

    <style name="ZendeskTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SubtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">?attr/actionbar_subtitle</item>
    </style>

    <style name="NormalListTitle">
        <item name="android:textColor">@color/header_foreground</item>
        <item name="android:fontFamily">@string/font_fontFamily_regular</item>
    </style>

    <style name="simpleTextViewLight">
        <item name="android:fontFamily">@string/font_fontFamily_light</item>
    </style>

    <style name="simpleTextViewNormal">
        <item name="android:fontFamily">@string/font_fontFamily_regular</item>
    </style>

    <style name="simpleTextViewMediumBold">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="ExpenseEditLabel">
        <item name="android:gravity">right</item>
        <item name="android:textColor">?attr/main_interface</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@string/font_fontFamily_light</item>
    </style>

    <style name="ExpenseEditText">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:inputType">none</item>
        <item name="android:fontFamily">@string/font_fontFamily_light</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
    </style>

    <style name="RecordValueText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/main_interface</item>
    </style>

    <style name="RecordTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/main_interface</item>
    </style>

    <style name="CustomDatePickerDialog" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:divider">?attr/main_interface</item>
        <item name="android:textColor">?attr/main_interface</item>
        <item name="android:selectedDateVerticalBar">?attr/main_interface</item>
    </style>

    <style name="LoadSpinner">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@color/tran_grey</item>
        <item name="android:visibility">gone</item>
    </style>

