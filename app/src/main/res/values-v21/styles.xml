    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:divider">@color/main_interface</item>
        <item name="android:listDivider">@color/delete_red</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:listDividerAlertDialog">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.PopupMenu.Large
        </item>
        <item name="android:background">@color/white_pure</item>
        <item name="android:windowTitleStyle">@style/TitleDialogTextStyle</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>

        <item name="android:textSize">16sp</item>
    </style>


    <style name="TitleDialogTextStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:textColor">@color/main_interface</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="DCTheme_NoActionBar" parent="DCTheme_NoActionBar.Base">

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>


    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/grey_medium</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>